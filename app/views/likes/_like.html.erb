  <% if user_signed_in? %>
    <% if @performance.liked_by?(current_user) %> 
        <p><span>お気に入り解除→ </span><%=link_to @performance.likes.count, performance_like_path(@performance.id), method: :delete, remote: true %></p>
    <% else %>
        <p><span>お気に入り登録→ </span><%=link_to @performance.likes.count, performance_likes_path(@performance.id), method: :post, remote: true %></p>
    <% end %>
    <% else %>
      <p><span>お気に入り数→ </span><%= @performance.likes.count %></p>
   <% end %>