<%= render "shared/header" %>

<h2>
  検索結果
</h2>
<%#検索結果の個数で条件分岐%>
<% if @results.length !=0 %>
  <% @results.each do |result| %>
    <td>
    <br>
    <li>
       <%# <%= result.image%>
       <%= result.title %>
       <%= result.group %>
       <%= result.genre.name %>
       <%= result.area.name %>
       <%= result.start_date %>
       <%= result.end_date %>
       <%= result.url %>
    </li>
  <% end %>
<% else %>
 該当する公演はありません
<% end %>
<br>
<%= link_to 'トップページにもどる', root_path %>

<%= render "shared/footer" %>